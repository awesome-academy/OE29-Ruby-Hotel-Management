<div class="container form-login">
  <div class ="content-login">
    <div class="row d-flex justify-content-center">
      <div class="col-10 form-sign-up">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
          <div class="field">
            <%= f.label :email, class: " label-required"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-input"  %>
            <%= render "users/shared/error_messages", field: :email %>
          </div>
          <div class="field">
            <%= f.label :name, class: " label-required" %><br />
            <%= f.text_field :name, class: "form-control form-input"  %>
            <%= render "users/shared/error_messages", field: :name %>
          </div>
          <div class="field">
            <%= f.label :password, class: " label-required" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t "devise.registrations.new.minimum" %>)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-input"  %>
            <%= render "users/shared/error_messages", field: :password %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, class: " label-required" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-input"  %>
            <%= render "users/shared/error_messages", field: :password_confirmation %>
          </div>
          <div class="actions d-flex justify-content-center">
            <%= f.submit t("devise.registrations.new.sign_up"), class: "btn btn-secondary btn-login" %>
          </div>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
