<h2><%= t "devise.registrations.edit.edit" %> <%= resource_name.to_s.humanize %></h2>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t "devise.registrations.edit.current" %><%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i><%= t "devise.registrations.edit.leave" %></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %><%= t "devise.registrations.edit.minimum" %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i><%= t "devise.registrations.edit.need" %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t("devise.registrations.edit.update") %>
  </div>
<% end %>

<h3><%= t "devise.registrations.edit.cancel" %></h3>

<p>Unhappy? <%= button_to  t("devise.registrations.edit.cancel"), registration_path(resource_name), data: { confirm: t("devise.registrations.edit.sure") }, method: :delete %></p>

<%= link_to t("devise.registrations.edit.back"), :back %>
