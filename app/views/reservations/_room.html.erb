<li>
  <div class="row list-room">
    <div class="col-md-3 image">
      <% if item.pictures[0].picture_url %>
        <%= image_tag item.pictures[0].picture_url , class: "img_reser" %>
      <% end %>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-6">
          <h3 class ="room-name"><%= item.name %></h3>
          <ul class= "room-reser">
            <li><%= t ".price" %><%= number_with_delimiter(item.price, delimiter: ".") %></li>
            <li><%= t ".type" %> <%= item.type_name %></li>
            <li><%= t ".view" %> <%= item.view_name %></li>
          </ul>
        </div>
        <div class="col-md-6 price-cont">
          <h3 class="price-title"><%= t ".price_book" %></h3>
          <h4 id ="room-price"><%= number_with_delimiter(item.price*count.to_i, delimiter: ".") %> <%= t ".vnd" %></h4>
        </div>
      </div>
    </div>
  </div>
</li>
