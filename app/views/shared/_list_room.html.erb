<div class="row list-room">
  <div class="col-md-3 image">
    <%= image_tag room.pictures[0].picture_url %>
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-6">
        <h3 class ="room-name"><%= room.name %></h3>
        <ul class= "room-des">
          <li><%= t ".price" %><%= number_with_delimiter(room.price, delimiter: ".") %><%= t ".vnd" %></li>
          <li><%= t ".type" %> <%= room.type_name %></li>
          <li><%= t ".view" %> <%= room.view_name %></li>
        </ul>
      </div>
      <div class="col-md-6">
        <%= form_for :booking, url: bookings_path do |f| %>
          <%= f.check_box :room_id, { class: "select", id: "room-#{room.id}",  "data-price" => "#{room.price}"}, room.id, false%>
        <% end %>
      </div>
    </div>
  </div>
</div>
