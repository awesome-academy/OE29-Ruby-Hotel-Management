<% provide :title, t("global.all_booking") %>
<div class="content-header">
  <div class="container-fluid">
    <%= link_to t(".back"), _back_url, class: "back_url" %>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= t ".list_booking" %></h3>
          </div>
          <div class="card-body table-responsive p-0">
            <table class="table table-hover text-center" id="admin-booking">
              <thead>
              <tr>
                <th></th>
                <th><%= t ".id" %></th>
                <th><%= t ".room_name" %></th>
                <th><%= t ".type_room" %></th>
                <th><%= t ".view_room" %></th>
                <th><%= t ".price_room" %></th>
                <th><%= t ".rent" %></th>
              </tr>
              </thead>
              <tbody id ="bill_view">
              <%= render partial: "admin/reservations/booking", collection: @bookings, as: :book %>
              </tbody>
            </table>
            <div id="paginator">
              <%= paginate @bookings, theme: "twitter-bootstrap-3" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag "admin_reservation" %>
