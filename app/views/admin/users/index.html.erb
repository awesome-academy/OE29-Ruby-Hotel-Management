<% provide :title, t(".all_client") %>
<div class="content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= t ".list_room" %></h3>
          </div>
          <div class="card-body table-responsive p-0">
            <table class="table table-hover text-center">
              <thead>
              <tr>
                <th></th>
                <th><%= t ".name" %></th>
                <th><%= t ".email" %></th>
                <th><%= t ".address" %></th>
                <th><%= t ".reservation_history" %></th>
              </tr>
              </thead>
              <tbody>
                <%= render @users %>
              </tbody>
            </table>
            <%= paginate @users, theme: "twitter-bootstrap-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
