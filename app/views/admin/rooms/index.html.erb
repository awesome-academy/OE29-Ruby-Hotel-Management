<% provide :title, t("global.all_room") %>
<div class="content-header">
  <div class="container-fluid">
    <button type="button" class="btn btn-primary float-sm-right" data-toggle="modal" data-target="#roommodal">
      <i class="fas fa-plus"></i> <%= t ".add_room" %>
    </button>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= t ".list_room" %></h3>
          </div>
          <div class="card-body table-responsive p-0">
            <table class="table table-hover">
              <thead>
              <tr>
                <th></th>
                <th></th>
                <th><%= t ".room_name" %></th>
                <th><%= t ".price" %></th>
                <th><%= t ".des" %></th>
                <th><%= t ".type" %></th>
                <th><%= t ".view" %></th>
                <th></th>
                <th></th>
              </tr>
              </thead>
              <tbody>
                <%= render @rooms %>
              </tbody>
            </table>
            <%= paginate @rooms, theme: "twitter-bootstrap-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "admin/rooms/form" %>
