<tr class="admin_room_item">
  <td>
    <%= image_tag room.pictures[0].picture_url %>
  </td>
  <td><%= room_counter + 1 %></td>
  <td><%= room.name %></td>
  <td><%= room.price %></td>
  <td><%= room.des %></td>
  <td><%= room.type_name %></td>
  <td><%= room.view_name %></td>
  <td>
    <%= link_to t(".edit"), "#", remote: true, class: "btn btn-block btn-primary btn-action" %>
  </td>
  <td>
    <%= link_to t(".delete"), admin_room_path(room), method: :delete, data: {confirm: t("global.you_sure")}, class: "btn btn-block btn-danger btn-action" %>
  </td>
</tr>
