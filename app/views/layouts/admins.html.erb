<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/layout_header" %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <%= javascript_pack_tag "admin_preview_image_room" %>
  </head>
  <body data-scrollbar-auto-hide="n" class="hold-transition sidebar-mini layout-fixed">
    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <%= render "shared/toaster" %>
    <div class="wrapper">
      <%= render "admin/layouts/header" %>
      <%= render "admin/layouts/sidebar" %>
      <div class="content-wrapper">
        <div class="content container-fluid">
          <div class="container-fluid">
              <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      I18n.defaultLocale = "<%= I18n.default_locale %>";
      I18n.locale = "<%= I18n.locale %>";
    </script>
  </body>
</html>
